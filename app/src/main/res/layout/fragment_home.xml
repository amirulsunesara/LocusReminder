<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".display.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="Search Reminders"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:singleLine="true"
        android:id="@+id/edSearchReminders"
        android:backgroundTint="@color/colorPrimary"
        android:textColorHint="@color/black_color"
        android:textColor="@color/black_color"
        ></EditText>


    <ListView
        android:id="@+id/listview_reminders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="5dp"
        android:isScrollContainer="true"
        android:scrollbars="vertical"
        android:layout_marginTop="10dp"
        android:layout_below="@id/edSearchReminders"
        android:divider="@color/colorDivider"
        />

    </RelativeLayout>




</FrameLayout>